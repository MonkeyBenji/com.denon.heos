{
  "id": "com.denon.heos",
  "version": "1.1.1",
  "compatibility": ">=2.1.1",
  "brandColor": "#EC2919",
  "sdk": 2,
  "name": {
    "en": "Denon Heos"
  },
  "description": {
    "en": "Adds support for Denon Heos Wi-Fi speakers"
  },
  "category": [
    "music"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "author": {
    "name": "Athom B.V."
  },
  "discovery": {
    "heos": {
      "type": "ssdp",
      "id": "{{headers.usn}}",
      "ssdp": {
        "search": "urn:schemas-denon-com:device:ACT-Denon:1"
      },
      "conditions": [
        [
          {
            "field": "headers.st",
            "match": {
              "type": "string",
              "value": "urn:schemas-denon-com:device:ACT-Denon:1"
            }
          }
        ]
      ]
    }
  }
}