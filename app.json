{
  "id": "com.denon.heos",
  "version": "1.1.0",
  "compatibility": ">=2.1.1",
  "brandColor": "#EC2919",
  "sdk": 2,
  "name": {
    "en": "Denon Heos"
  },
  "description": {
    "en": "Adds support for Denon Heos Wi-Fi speakers"
  },
  "category": [
    "music"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "author": {
    "name": "Athom B.V."
  },
  "flow": {
    "actions": [
      {
        "id": "play_aux_in",
        "title": {
          "en": "Play AUX In",
          "nl": "Speel AUX In"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=heos"
          }
        ]
      },
      {
        "id": "play_hdmi_1",
        "title": {
          "en": "Play HDMI 1",
          "nl": "Speel HDMI 1"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=heos"
          }
        ]
      },
      {
        "id": "play_hdmi_2",
        "title": {
          "en": "Play HDMI 2",
          "nl": "Speel HDMI 2"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=heos"
          }
        ]
      },
      {
        "id": "play_hdmi_3",
        "title": {
          "en": "Play HDMI 3",
          "nl": "Speel HDMI 3"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=heos"
          }
        ]
      },
      {
        "id": "play_hdmi_4",
        "title": {
          "en": "Play HDMI 4",
          "nl": "Speel HDMI 4"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=heos"
          }
        ]
      },
      {
        "id": "play_hdmi_arc_1",
        "title": {
          "en": "Play HDMI ARC 1",
          "nl": "Speel HDMI ARC 1"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=heos"
          }
        ]
      },
      {
        "id": "volume_up",
        "title": {
          "en": "Volume Up",
          "nl": "Volume Omhoog"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=heos"
          }
        ]
      },
      {
        "id": "volume_down",
        "title": {
          "en": "Volume Down",
          "nl": "Volume Omlaag"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=heos"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "heos",
      "name": {
        "en": "Denon Heos"
      },
      "class": "speaker",
      "capabilities": [
        "speaker_track",
        "speaker_album",
        "speaker_artist",
        "speaker_prev",
        "speaker_next",
        "speaker_position",
        "speaker_repeat",
        "speaker_shuffle",
        "speaker_playing",
        "volume_set",
        "volume_up",
        "volume_down",
        "volume_mute"
      ],
      "images": {
        "large": "/drivers/heos/assets/images/large.jpg",
        "small": "/drivers/heos/assets/images/small.jpg"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ]
}